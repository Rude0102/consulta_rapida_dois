@model consulta_rapida.Models.Paciente

@{
    ViewData["Title"] = "Details";
}

<h1>Paciente @Html.DisplayFor(model => model.nomePaciente)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome Paciente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomePaciente)
        </dd>
        <dt class = "col-sm-2">
            Hora da consulta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.horaConsulta)
        </dd>
        <dt class = "col-sm-2">
            Especialidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.especialidade)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
