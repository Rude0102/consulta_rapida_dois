@model consulta_rapida.Models.Paciente

@{
    ViewData["Title"] = "Agendamento";
}

<h1>Agendamento</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agendamento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomePaciente" class="control-label">Nome do paciente</label>
                <input asp-for="nomePaciente" class="form-control" />
                <span asp-validation-for="nomePaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaConsulta" class="control-label">Agendamento</label>
                <input asp-for="horaConsulta" class="form-control" />
                <span asp-validation-for="horaConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agendar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
