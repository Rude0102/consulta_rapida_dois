@model consulta_rapida.Models.Paciente

@{
    ViewData["Title"] = "Create";
}

<h4>Nova Consulta</h4>
<hr />

<div>
    <a asp-action="Index"  class="btn btn-primary">Voltar</a>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-valid  ation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomePaciente" class="control-label">Nome do paciente</label>
                <input asp-for="nomePaciente" class="form-control nomePaciente" />
                <span asp-validation-for="nomePaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="horaConsulta" class="control-label">Hora da consulta</label>
                <input asp-for="horaConsulta" class="form-control" />
                <span asp-validation-for="horaConsulta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="especialidade" class="control-label">Especialidade</label>
                <select asp-for="especialidade" class="form-control">
                    <option value="teste">Selecione</option>
                </select>
                <span asp-validation-for="especialidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agendar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
