@model IEnumerable<consulta_rapida.Models.Paciente>

@{
    ViewData["Title"] = "Relatório";
}

<h1>Consulta Rápida</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Consulta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
              Nome Paciente
            </th>
            <th>
                Hora da Consulta
            </th>
            <th>
               Especialidade
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomePaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horaConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.especialidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
